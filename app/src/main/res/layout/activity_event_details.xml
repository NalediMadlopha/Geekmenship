<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geekmenship.app.EventDetailsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3" >

            <LinearLayout
                android:id="@+id/itemLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/itemLayout0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:id="@+id/eventImageView"
                        android:src="@drawable/open_picture"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/communityNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GDG - Pretoria"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:fontFamily="sans-serif-light"
                        android:textSize="20sp"
                        android:textColor="@color/orange"
                        android:lines="1" />

                    <TextView
                        android:id="@+id/eventTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Android Fundamentals Study Jam2"
                        android:textAppearance="?android:attr/textAppearance"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/eventDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Date: 19/02/2015"
                        android:textAppearance="?android:attr/textAppearance"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13sp"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/eventTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 09:00 - 16:00"
                        android:textAppearance="?android:attr/textAppearance"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13sp"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/eventVenueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Venue: Innovation Hub - mLab"
                        android:textAppearance="?android:attr/textAppearance"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13sp"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/eventDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/lorem_ipsum"
                        android:textAppearance="?android:attr/textAppearance"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:background="@color/grey" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/grey" >

                            <TextView
                                android:id="@+id/organizerNameLabelTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Organizer: "
                                android:textAppearance="?android:attr/textAppearance"
                                android:fontFamily="sans-serif-light"
                                android:textSize="13sp"
                                android:maxLines="1" />

                            <TextView
                                android:id="@+id/organizerNameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Naledi Madlopha"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:fontFamily="sans-serif-light"
                                android:textSize="13sp"
                                android:maxLines="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/grey" >

                            <TextView
                                android:id="@+id/organizerEmailLabelTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email: "
                                android:textAppearance="?android:attr/textAppearance"
                                android:fontFamily="sans-serif-light"
                                android:textSize="13sp"
                                android:maxLines="1" />

                            <TextView
                                android:id="@+id/organizerEmailTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="naledi.madlopha@gmail.com"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:fontFamily="sans-serif-light"
                                android:textSize="13sp"
                                android:maxLines="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/grey" >

                            <TextView
                                android:id="@+id/organizerDescriptionLabelTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description: "
                                android:textAppearance="?android:attr/textAppearance"
                                android:fontFamily="sans-serif-light"
                                android:textSize="13sp"
                                android:maxLines="1" />

                            <TextView
                                android:id="@+id/organizerDescriptionTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I am Naledi Madlopha and I work hard!"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:fontFamily="sans-serif-light"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/vertical_divider_white"
        android:dividerPadding="12dip"
        android:showDividers="middle"
        android:background="#ffffff" >

        <Button
            android:id="@+id/attendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attending"
            android:background="@color/orange"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>
