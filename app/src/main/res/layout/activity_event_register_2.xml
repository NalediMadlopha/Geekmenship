<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geekmenship.app.EventRegisterActivity">

    <ImageButton
        android:id="@+id/eventPictureImageButton"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_action_new_picture"
        android:background="@color/grey"
        android:clickable="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />

    <ListView
        android:id="@+id/eventRegisterListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/eventPictureImageButton">
    </ListView>
</RelativeLayout>
